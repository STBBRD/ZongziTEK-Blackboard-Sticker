                                </ui:SimpleStackPanel>
                                <TextBox Name="TextBoxWeatherCity" ui:ControlHelper.Header="天气城市" TextChanged="TextBoxWeatherCity_TextChanged"/>
                            </ui:SimpleStackPanel>
