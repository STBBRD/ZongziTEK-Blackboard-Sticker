<Page x:Class="ZongziTEK_Blackboard_Sticker.Pages.WelcomePages.WelcomePage4"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern" xmlns:ikw="http://schemas.inkore.net/lib/ui/wpf"
      xmlns:local="clr-namespace:ZongziTEK_Blackboard_Sticker.Pages.WelcomePages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800" d:Background="White"
      Title="WelcomePage4">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Image x:Name="ImageEmoji" Grid.Column="0" Source="../../Resources/Emojis/party-popper.png" Margin="96"/>

        <ikw:SimpleStackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="32" Spacing="12">
            <TextBlock Foreground="{DynamicResource {x:Static ui:ThemeKeys.TextControlForegroundKey}}" Text="轰！嚓嚓！你已经完成了初始设置" FontSize="40" TextWrapping="Wrap"/>
            <TextBlock Foreground="{DynamicResource {x:Static ui:ThemeKeys.TextControlForegroundKey}}" Text="接下来，你可以前往课程表编辑器来编辑或导入课程表" FontSize="20" TextWrapping="Wrap" Opacity="0.75"/>
        </ikw:SimpleStackPanel>
    </Grid>
</Page>
