<Page x:Class="ZongziTEK_Blackboard_Sticker.Pages.CountdownPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ZongziTEK_Blackboard_Sticker.Pages"
      mc:Ignorable="d" 
      xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern" xmlns:ikw="http://schemas.inkore.net/lib/ui/wpf"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CountdownPage" Foreground="{DynamicResource {x:Static ui:ThemeKeys.TextControlForegroundKey}}">

    <Grid Margin="16,8" HorizontalAlignment="Right">
        <Viewbox>
            <StackPanel Orientation="Horizontal">
                <TextBlock Name="LabelName" FontSize="60" Text="距离期末考试还有" VerticalAlignment="Bottom"/>
                <TextBlock Name="LabelDays" FontFamily="../../Resources/#Digital-7 Mono" Margin="24,0,0,0" FontSize="76" d:Text="10" Foreground="#00cc00" VerticalAlignment="Bottom"/>
                <TextBlock Name="LabelDaysDetail" FontFamily="../../Resources/#Digital-7 Mono" Margin="0,0,24,6" FontSize="40" d:Text=".000" Foreground="{Binding Foreground, ElementName=LabelDays}" VerticalAlignment="Bottom"/>
                <TextBlock FontSize="60" Text="天" VerticalAlignment="Bottom"/>
            </StackPanel>
        </Viewbox>
    </Grid>
</Page>
